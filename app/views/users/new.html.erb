<div id="content">
  <h1>Crear un nuevo Usuario</h1>
  <% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this game from being saved:</h2>
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @user do |f| %>
  <p class="name">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </p>
  <p class="password">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </p>
  <p class="password">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
  </p>
  <p class="submit">
    <%= f.submit %>
  </p>
<% end %>

</div>
